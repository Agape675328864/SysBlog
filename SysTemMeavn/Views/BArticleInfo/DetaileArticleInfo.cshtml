@using SysTemModel;
@using SysTemCommHelper;
@model List<B_Article>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>文章详情</title>
    <script src="~/scripts/jquery-1.7.1.min.js"></script>
    <style type="text/css">
        ul, li {
            list-style: none;
            line-height: 50px;
        }

        label {
            display: inline-block;
            font-size: 14px;
        }

        .txtBox {
            border: 1px solid #c1dad7;
            border-radius: 3px;
            width: 150px;
            height: 25px;
            padding: 0 5px;
        }

        .txtNum {
            width: 80px;
            padding-right: 0;
        }

        .btn-Bg {
            background: url(/images/bg_btn.png) repeat-x;
            border: none;
            border-radius: 3px;
            height: 25px;
            line-height: 25px;
            width: 80px;
            text-align: center;
            color: #fff;
            margin-right: 30px;
            margin-left: 20px;
        }

        #btnOK {
            background-position-y: -250px;
        }

        #ddlFather, #ddlKids, #ddlState {
            border: 1px solid #c1dad7;
            height: 25px;
            line-height: 25px;
            border-radius: 3px;
        }
    </style>
</head>
<body>
    <div>
        <ul>
            @if (Model.Count > 0)
            {
                B_Article B_ArticleModel = Model.SingleOrDefault();
                <li>
                    <label for="goods_name"> 文章标题:</label>@B_ArticleModel.Title
                </li>
                <li>
                    <label for="goods_name"> 文章内容:</label>@Html.Raw(B_ArticleModel.Content)
                </li>
                @*<li>
                    <label for="goods_name">标题图片:</label>
                    <img style="width:100%;height:100%;" src="@Html.Raw(Consts.ArticlePath +  B_ArticleModel.Picture)" />
                </li>*@
                <li>
                    <label for="goods_name"> 创建时间:</label>@Html.Raw(B_ArticleModel.CreateTime?.ToString("yyyy-MM-dd"))
                </li>
                <li>
                    <label for="goods_name"> 状态:</label>
                    @if (B_ArticleModel.State.Equals(0))
                    {
                        <text>显示</text>
                    }
                    else if (B_ArticleModel.State.Equals(1))
                    {
                        <text>不显示</text>
                    }
                </li>
                <li>
                    <label for="goods_name"> 查看次数 热度:</label>@B_ArticleModel.Check
                </li>
            }
            else
            {
                <li>
                    <label for="goods_name">暂无信息</label>
                </li>
            }
        </ul>
    </div>
</body>
</html>
